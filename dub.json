{
	"name": "zcc",
	"description": "D library to build C/C++ code using zig",
	"license": "MIT",
	"version": "0.1.8",
	"authors": [
		"Matheus C. Fran√ßa"
	],
	"dflags-ldc": [
		"-preview=all",
		"--verrors-context"
	],
	"dflags-dmd": [
		"-preview=all",
		"-verrors=context"
	],
	"dflags-gdc": [
		"-fpreview=all"
	],
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"targetPath": "lib",
			"targetName": "builder"
		},
		{
			"name": "unittest",
			"targetPath": "bin",
			"targetName": "buildtest"
		}
	],
	"subPackages": [
		{
			"name": "cc",
			"targetType": "executable",
			"targetPath": "bin",
			"targetName": "zcc",
			"mainSourceFile": "cli/app.d"
		}
	]
}
