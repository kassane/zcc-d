{
    "name": "cxxbuild",
    "targetType": "executable",
    "targetPath": "build",
    "mainSourceFile": "source/app.d",
    "lflags": [
        "-L$PACKAGE_DIR/build"
    ],
    "lflags-windows": [
        "/LIBPATH:$PACKAGE_DIR\\build"
    ],
    "libs": [
        "cffi"
    ],
    "preBuildCommands-posix": [
        "$DUB --single build.d"
    ],
    "preBuildCommands-windows": [
        "powershell New-Item -ItemType Directory -Force -Path $PACKAGE_DIR/build",
        "zig build-lib -lc $PACKAGE_DIR/source/ffi.cc -target native-windows-msvc -femit-bin=$PACKAGE_DIR/build/cffi.lib"
    ]
}
