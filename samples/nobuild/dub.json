{
    "name": "nobuild",
    "targetType": "executable",
    "targetPath": "build",
    "mainSourceFile": "source/app.d",
    "lflags": [
        "-L$PACKAGE_DIR/build"
    ],
    "lflags-windows": [
        "/LIBPATH:$PACKAGE_DIR\\build"
    ],
    "libs": [
        "cffi"
    ],
    "preBuildCommands-posix": [
        "mkdir -p $PACKAGE_DIR/build",
        "zig c++ $PACKAGE_DIR/source/lib.cc -O2 -s -fPIC -shared -o $PACKAGE_DIR/build/libcffi.so"
    ],
    "preBuildCommands-windows": [
        "powershell New-Item -ItemType Directory -Force -Path $PACKAGE_DIR/build",
        "zig c++ $PACKAGE_DIR/source/lib.cc -target native-windows-msvc -O2 -s -shared -fPIC -o $PACKAGE_DIR/build/cffi.dll"
    ]
}